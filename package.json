{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "TS Template",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "nodemon",
    "build": "rm -rf dist; tsc --pretty",
    "production": "NODE_ENV='production' node dist/index.js"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "author": "Nhan Cao <nhancv92@gmail.com> (https://nhancv.github.io)",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "request": "^2.87.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "jest": "^22.4.2",
    "nodemon": "^1.17.1",
    "ts-jest": "^22.4.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2"
  }
}

{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "TS Template",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "start": "nodemon",
    "build": "rm -rf dist; tsc --pretty",
    "production": "NODE_ENV='production' node dist/index.js",
    "heroku-postbuild": "echo Skip build on Heroku"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "author": "Nhan Cao <nhancv92@gmail.com> (https://nhancv.github.io)",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/jest": "^23.3.14",
    "@types/mongodb": "^3.3.5",
    "@types/node": "^10.14.20",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "jest": "^23.6.0",
    "nodemon": "^1.19.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.5"
  },
  "heroku-run-build-script": true
}
